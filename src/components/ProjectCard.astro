---
interface Props {
    name: string;
    description?: string;
    link: string;
    owner?: string;
    source?: string;
    category?: string;
    context?: string; //Added context
}

const { name, description, link, owner, source, category, context } =
    Astro.props;
---

<div
    class="project-card bg-white dark:bg-gray-800 shadow-md rounded-lg p-4"
    data-category={category || "uncategorized"}
>
    <a
        href={link}
        target="_blank"
        rel="noopener noreferrer"
        class="text-xl font-semibold hover:text-blue-500 dark:hover:text-blue-300 block mb-2"
    >
        {name}
    </a>
    <p class="text-gray-600 dark:text-gray-300 mb-2">
        {context || description || "No description available."}
    </p>
    {
        owner && (
            <p class="text-sm text-gray-500 dark:text-gray-400">
                Owner: {owner}
            </p>
        )
    }
    {
        source && (
            <p class="text-sm text-gray-500 dark:text-gray-400">
                Forked from: {source}
            </p>
        )
    }
    {/* Add tags, metadata, and other details as needed */}
</div>
