---
interface Props {
    item: {
        page: string;
        name: string;
        description: string;
        tags: string[];
    };
}

const { item } = Astro.props;
---

<div class="bg-white dark:bg-gray-800 shadow-md rounded-lg p-4">
    <h3 class="text-xl font-semibold mb-2">{item.name}</h3>
    <p class="text-gray-600 dark:text-gray-300 mb-2">{item.description}</p>
    <div class="flex flex-wrap gap-2">
        {
            item.tags.map((tag) => (
                <span class="bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 py-1 px-2 rounded-full text-sm">
                    {tag}
                </span>
            ))
        }
    </div>
    <a
        href={`/portfolio/${item.page}`}
        class="inline-block mt-4 text-blue-500 hover:text-blue-700"
        >Learn More</a
    >
</div>
