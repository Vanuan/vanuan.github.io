---
import Layout from "../layouts/Layout.astro";
import PageHeader from "../components/PageHeader.astro";
import { SITE_TITLE } from "../consts";
import ExperienceItem from "../components/ExperienceItem.astro";
import experienceData from "../data/experience.json";
---

<Layout
    title="Commercial Experience | {SITE_TITLE}"
    description="Vanya Yani's commercial project experience"
>
    <PageHeader
        title="Commercial Experience"
        description="A detailed overview of commercial projects."
    />

    <a
        href="/cv"
        class="inline-block mt-4 text-blue-500 hover:text-blue-700"
    >
        ‚Üê Back to CV
    </a>
    <section class="py-10">
        <h2 class="text-2xl font-semibold mb-4">Project Details</h2>

        {
            experienceData.map((experience) => (
                <ExperienceItem experience={experience} />
            ))
        }
    </section>
</Layout>

